@model WereViewApp.Models.EntityModel.Review

@{
    ViewBag.Title = "Deleting " + Html.DisplayFor(model => model.Title);
    string title = ViewBag.Title;
    string subtitle = ViewBag.Title;
    string asking = "Are you sure you want to delete this?";
    string controller = (string) ViewBag.controller;
    string viewName = "Delete";
    var token = @Html.AntiForgeryToken();
}
<h1 class="gap-from-top-small h2">
    <span class="glyphicon glyphicon-trash"></span>
    @Html.SamePageLink(title, subtitle, false)
</h1>
<hr />
<h3 class="h4">@asking</h3>
<div class="form-horizontal">
    @using (Html.BeginForm()) {
        @token
        <div class="form-group">
            <div class="col-md-11">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" title="Back" class="btn btn-info dev-btn-back"><span class="glyphicon glyphicon-chevron-left"></span> No, back</a>
                    <div class="inline input-group-btn">
                        <button class="btn btn-danger" title="Remove this record permanently.."><i class="glyphicon glyphicon-remove"></i> Yes, delete permanently</button>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a href="@Url.Action("Edit", new {id = Model.ReviewID})" title="Edit" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
        <table class="gap-from-top-small table table-hover">
            <thead>
            <tr>
                <th>Properties</th>
                <th></th>
                <th>Values</th>
            </tr>
            </thead>
            <tbody>

            @Html.HiddenFor(model => model.ReviewID)

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Title)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Title)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Pros)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Pros)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Cons)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Cons)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.IsSuggest)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.IsSuggest)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Comment1)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Comment1)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Comment2)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Comment2)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.Comments)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.Comments)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.LikedCount)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.LikedCount)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.DisLikeCount)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.DisLikeCount)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.App.AppName)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.App.AppName)
                </td>
            </tr>

            <tr>
                <td class="dev-label-property">
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </td>
                <td>:</td>
                <td class="dev-label-value">
                    @Html.DisplayFor(model => model.User.FirstName)
                </td>
            </tr>

            </tbody>
        </table>

        <div class="form-group">
            <div class="col-md-11">
                <div class="btn-group">
                    <a href="@Url.Action("Index")" title="Back" class="btn btn-info dev-btn-back"><span class="glyphicon glyphicon-chevron-left"></span> Back</a>
                    <div class="inline input-group-btn">
                        <button class="btn btn-danger" title="Remove this record permanently.."><i class="glyphicon glyphicon-remove"></i> Delete permanently</button>
                    </div>
                </div>
            </div>
            <div class="col-md-1">
                <a href="@Url.Action("Edit", new {id = Model.ReviewID})" title="Edit" class="btn btn-success"><span class="glyphicon glyphicon-edit"></span> Edit</a>
            </div>
        </div>
    }
</div>
