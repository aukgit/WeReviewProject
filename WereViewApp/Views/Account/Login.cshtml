@using WereViewApp.Models.ViewModels
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
}
<div class="gap-from-top"></div>
<h2 class="h2">@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"})) {
                @Html.AntiForgeryToken()
                <h4>Use a local account to log in. If you don't have any account please @Html.ActionLink("sign up", "Register").</h4>
                <hr />
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})

                @Html.EditorFor(m => m.Email, new {@class = "form-control"})

                @Html.EditorFor(m => m.Password, new {@class = "form-control"})
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">
                        <div class="checkbox col-md-4">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <div class="col-lg-7 col-lg-offset-1 col-md-7 col-md-offset-1 col-sm-7 col-sm-offset-1">
                            <input type="submit" value="Log in" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-2">

                    </div>
                </div>

                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                        @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>

    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel {Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl})
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}