@model WereViewApp.Models.ViewModels.EmailResendViewModel
@{
    ViewBag.title = "Registered Successfully!";
}
<div class="top-gap-2x"></div>
<div class="f-em-23 green">
    <i class="fa fa-paper-plane "></i> @ViewBag.title
</div>
<div class="sky-blue f-em-15">
    @if (ViewBag.message == null) {
        <text>You have already registered and your account is created successfully. However, it is not activated yet, please login to your email account to activate the account. Please check spam or junk folder.</text>
    } else {
        <text>@ViewBag.message</text>
    }
</div>
@if (ViewBag.message == null) {
    <div class="sky-blue f-em-15">
        You can also resend your activation code.
    </div>
    using (Html.BeginForm("ResendConfirmationMail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
        @Html.EditorFor(n => n.Email)
        @Html.AntiForgeryToken()
        @Html.SubmitButton("Resend", "fa fa-envelope-o")
    }
}
<div class="top-gap-2x"></div>
