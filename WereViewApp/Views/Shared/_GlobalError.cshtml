@using WereViewApp.Modules.Session
@using WereViewApp.Modules.UserError
@{
    var errors = AppConfig.GetGlobalError();
    var auth = Session[SessionNames.AuthError];
}
@if (auth != null) {
    <h1 class="h3">
        <label class="label label-danger"></label>auth
    </h1>
    Session[SessionNames.AuthError] = null;
}

@if (errors != null) {
    var errorList = errors.GetErrors();
    if (errorList != null) {
        <div class="col-lg-12 col-md-12 col-sm-12 global-error">
            <h2 class="h4">Please solve these errors:</h2>
            <ul class="display-numbers global-error-ul">
                @foreach (var error in errorList) {
                    <li>
                        <span class="@errors.GetCSSForError(error)">@error.ErrorMessage</span>
                        @if (@error.Solution != null) {
                            <span class="@ErrorCollector.SOLUTION_STATE_CLASS">@error.Solution</span>
                        }
                        @if (@error.Link != null) {
                            <a href="@error.Link" class="error-solution-link" title="@error.LinkTitle">
                                <span class="@ErrorCollector.SOLUTION_STATE_LINK_CLASS" title="@error.LinkTitle">@error.LinkTitle</span>
                            </a>
                        }
                    </li>
                }
            </ul>
        </div>
    }
}