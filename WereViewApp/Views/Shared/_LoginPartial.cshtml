@using Microsoft.AspNet.Identity
@{
    string username = @User.Identity.GetUserName();
}
@if (Request.IsAuthenticated) {
    <li>
        <a href="@AppVar.Url/Account/Manage" title="Manage your account">
            @User.Identity.GetUserName() !
        </a>
        <ul class="animated dropdown fadeIn">
            <li>
                <a href="@AppVar.Url/Account/Manage" title="Manage your account">Manage</a>
            </li>
            <li>
                <a href="@AppVar.Url/Profile/@username" title="Public profile  of @username">Public Profile</a>
            </li>
            @Html.GetMenu("AppPost")
            <li title="Sign out">
                @using (Html.BeginForm("SignOut", "Account", FormMethod.Post, new {@id = "logoutForm"})) {
                    @Html.AntiForgeryToken()
                    <a href="javascript:document.getElementById('logoutForm').submit()">Sign out</a>
                }
            </li>
        </ul>
    </li>
} else {
    <li title="Login in WeReviewApp.com">
        <a href="#" title="Login in WeReviewApp.com">
            <h1 title="Login in WeReviewApp.com">
                <strong title="Login in WeReviewApp.com">
                    <em title="Login in WeReviewApp.com">
                        Login
                    </em>
                </strong>
            </h1>
        </a>
        <ul class="animated dropdown fadeIn">
            <li>
                <a href="@AppVar.Url/Login" title="Login in WeReviewApp.com">
                    <h1 title="Login in WeReviewApp.com">
                        <strong title="Login in WeReviewApp.com">
                            <em title="Login in WeReviewApp.com">
                                Login
                            </em>
                        </strong>
                    </h1>
                </a>
            </li>
            <li>
                <a href="@AppVar.Url/Register" title="Register in WeReviewApp.com">
                    <h1 title="Register in WeReviewApp.com">
                        <strong title="Register in WeReviewApp.com">
                            <em title="Register in WeReviewApp.com">
                                Register
                            </em>
                        </strong>
                    </h1>
                </a>
            </li>
        </ul>
    </li>
    @*<ul class="nav navbar-nav navbar-right">
            <li>@Url.Action("Register", "Account", routeValues: new { area="" })</li>
            <li>@Url.Action("Login", "Account", routeValues: new { Area = "" })</li>
        </ul>*@
}
