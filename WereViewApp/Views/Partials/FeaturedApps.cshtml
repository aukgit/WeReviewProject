@using WereViewApp.Models.EntityModel.ExtenededWithCustomMethods
@model List<WereViewApp.Models.EntityModel.App>
@{
    Layout = null;
    var i = 0;
}

@if (Model != null) {
<div class="featured-appsbox" title="featured apps of @AppVar.Name">
    <h1><a href="#">Featured Apps</a></h1>
    @foreach (var app in Model) {
        string url = app.GetAppURL();

        <div class="appsbox" data-sequence="@(i++)">
            <a href="@url" title="@app.AppName">
                <div class="imgbox"><img src="@app.GallerySuggestionIconLocation" class="img-responsive" alt="@app.AppName"></div>
                <div class="appsinfo clearfix">
                    <h1 title="@app.AppName">
                        @Html.Truncate(app.AppName, 20, true)
                    </h1>
                    <div class="apps">
                        @app.AvgRating
                        <i class="fa fa-star"></i>
                        <i class="@app.GetPlatform().Icon"></i>
                    </div>
                </div>
            </a>
        </div>
    }

</div>
 
}