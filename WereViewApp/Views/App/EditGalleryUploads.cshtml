@model IEnumerable<UploadedGalleryImageEditViewModel>
@{
    Layout = Request.IsAjaxRequest() ? null : "~/Views/Shared/_Layout.cshtml";
}
<!-- Modal -->
<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-btn="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title h3">Edit Gallery Images</h4>
            </div>
            <div class="modal-body">
                @foreach (var item in Model) {
                    <div class="row" data-id="0" data-sequence="@item.Sequence">
                        <div class="col-md-2">
                            <img data-id="0" data-sequence="@item.Sequence" class="dev-upload-plugin-image-@item.UploadGuid-@item.Sequence image-size-fixed-for-model" src="@item.ImageURL" alt="@item.Tile"/>
                        </div>
                        <div class="col-md-10">
                            @*@Html.EditorFor(n => item.Tile, "String-NoLabel")
                                @Html.EditorFor(n => item.Subtitle,"String-NoLabel")*@
                            <a data-id="0" data-btn="delete" data-sequence="@item.Sequence" class="btn btn-danger" href="@item.DeleteURL"><i class="fa fa-remove"></i> Delete</a>
                            @*<a class="btn btn-success" href="@item.ReUploadURL"><i class="fa fa-upload"></i> Re-upload</a>*@
                        </div>
                    </div>
                }

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-btn="close" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->