@model WereViewApp.Models.EntityModel.App

@{
    bool hasRated = Model.CurrentUserRatedAppValue != null;
}
<div class="col-sm-8">
    <div class="rating-box-row">
        <div>
            <div class="star-image start-box float-left">@Model.AvgRating</div>
            <div class="user-rating-box float-left">
                <h4>Your Rating</h4>
                <div class="price rating-display">
                    @if (hasRated) {
                        <input data-readonly="true" class="rating-5-page-details" title="rating of @Model.AppName" value="@Model.CurrentUserRatedAppValue" min="0" max="5" step="1" data-size="xs">
                    } else {
                        <input class="rating-5-page-details" title="rating of @Model.AppName" value="0" min="0" max="5" step="1" data-size="xs">
                    }
                    <meta itemprop="best" content="5">
                </div>
                <div class="user">
                    <span class="number">@Model.AvgRating</span> Rating from <a>@Model.ReviewsCount users</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-sm-4 app-viewed-box">
    <h1 class="app-viewed-numbers">@Model.TotalViewed</h1>
    <div class="views-text">views</div>
</div>