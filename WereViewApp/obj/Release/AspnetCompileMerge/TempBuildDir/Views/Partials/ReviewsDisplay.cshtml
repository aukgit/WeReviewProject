@using WereViewApp.Modules.DevUser
@using WereViewApp.Models.EntityModel.ExtenededWithCustomMethods
@model WereViewApp.Models.EntityModel.App
@{
    var i = 0;
    var userId = UserManager.GetLoggedUserId();
    Layout = null;
}

<div id="review-collection">
    @if (Model.Reviews != null && Model.Reviews.Count > 0) {

        <div class="blogitemWrap">
            @foreach (var review in Model.Reviews) {
                <div class="blogitembox row review@(i)" data-sequence="@(i)">
                    <div class="textbox col-md-10 col-sm-10">
                        <h3 title="@Model.AppName , Review : @review.Title">@review.Title</h3>
                        <div class="navmenu">
                            <ul>
                                <li class="posted_by">Posted by <a href="#">@review.User.UserName</a> |</li>
                                <li class="date">@Html.DisplayDate(review.CreatedDate)</li>
                            </ul>
                        </div>
                        <div title="reiview contents">
                            @review.Comment1<a id="show_review@(i)" data-sequence="@(i)" class="showLink"><span id="elipse-dot">...</span> see more</a><div id="less_review@(i)" class="more">
                                @review.Comment2
                                <h1 title="pros of @Model.AppName" class="h5 green">Pros:</h1>
                                <p title="pros of @Model.AppName">@review.Pros</p>
                                <h1 title="cons of @Model.AppName" class="h5 red">Cons:</h1>
                                <p title="cons of @Model.AppName">@review.Cons</p>
                                <a id="hide_review@(i)" class="hideLink" data-sequence="@(i)">less</a>
                            </div>
                        </div>
                    </div>

                    <div class="imgbox col-md-2 col-sm-2">
                        <div class="starbox">
                            <span class="rating-value">@review.Rating</span>
                        </div>
                        <a id="review-thumbs-up-click-@(i)" data-sequence="@(i)" data-review-like-btn="true" href="@Url.Action("Like", "Reviews", new { id = @review.ReviewID })"><i class="fa fa-thumbs-up"></i></a>
                        <a id="review-thumbs-down-click-@(i)" data-sequence="@(i)" data-review-dislike-btn="true" href="@Url.Action("Dislike", "Reviews", new { id = @review.ReviewID })"><i class="fa fa-thumbs-down"></i></a>
                    </div>
                </div>
                {
                    i++;
                }
            }

        </div>
        <div class="morewrap" id="review-load-more-btn"><a class="loadmore">Load More</a></div>
    }
</div>