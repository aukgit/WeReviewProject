@model IEnumerable<WereViewApp.Models.POCO.IdentityCustomization.NavigationItem>

@{
    ViewBag.Title = "NavigationItem";
}

<h2 class="h3"><span class="glyphicon glyphicon-th-list"></span> @ViewBag.Title</h2>

<p class="right">
    <a href="@Url.Action("Add", new { id = ViewBag.NavigationID })" title="Create a new item." class="btn btn-warning create-save"><span class="glyphicon glyphicon-plus"></span> Create</a>
    <a href="@Url.Action("Index", "Menu")" title="Root menu page" class="btn btn-info create-save"><span class="glyphicon glyphicon-th-list"></span> Menu</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            Menu
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RelativeURL)
        </th>
        <th>
            Order
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementClasses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ElementID)
        </th>


        <th>
            Has Drop-Down
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @ViewBag.MenuName
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelativeURL)
            </td>
            <td>
                <form action="/Admin/NavItems/Ordering" method="post" class="process-ordering-in-menu-items">
                    @Html.HiddenFor(n => item.NavigationID)
                    @Html.TextBoxFor(n => item.Ordering, new { @class = "form-control" })
                </form>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementClasses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ElementID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.HasDropDown)
            </td>


            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NavigationItemID, NavigationID = item.NavigationID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NavigationItemID, NavigationID = item.NavigationID }, new { onclick = "return confirm('Are you sure?')" })
            </td>
        </tr>
    }

</table>
